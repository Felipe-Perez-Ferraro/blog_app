<section>
  <article class="max-w-sm md:max-w-lg lg:max-w-2xl mx-auto py-10">
    <h2 class="text-lg text-slate-200 font-bold">Forgot your password?</h2>  

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "w-full flex flex-col gap-y-3 border border-slate-200 rounded p-2" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.email_field :email, autocomplete: "email", placeholder: "Email",
        class: "w-full rounded" %>
      </div>

      <div class="actions">
        <%= f.submit "Reset Password", class: "w-full border border-slate-200 rounded py-1 px-4 text-sm font-bold text-slate-200 cursor-pointer"  %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>  
  </article>
</section>