<section>
  <article class="max-w-sm md:max-w-lg lg:max-w-2xl mx-auto py-10">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "w-full flex flex-col gap-y-3 border border-slate-200 rounded p-2" }) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "w-full rounded" %>
      </div>
    
      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "w-full rounded" %>
      </div>
    
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    
      <div class="actions">
        <%= f.submit "Log in", class: "w-full border border-slate-200 rounded py-1 px-4 text-sm font-bold text-slate-200 cursor-pointer" %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </article>
</section>